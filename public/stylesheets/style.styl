*
  margin      0
  padding     0

html, body
  height      100%
body
  font        14px Helvetica, Arial, sans-serif

#map
  width       100%
  height      100%
  position    relative
  z-index     1

#range-wrapper
  position    absolute
  z-index     2
  bottom      0
  width       100%
  height      35px
  background  rgba(0,0,0,.8)
  border-top  2px solid rgba(255,255,255,.5)

#range-wrapper .date
  color       white
  margin      10px 2.5% 0 0
  display     inline-block
  float       right
  font-size   85%

input[type='range']
  margin      10px 0 0 2.5%
  width       85%

.circle
  border-radius 50%
  border      2px solid black
  background  rgba(255,255,255,.75)